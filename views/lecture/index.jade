div.content
	div.container1

		h1 #{ lecture.name }
		p Course: #{ lecture.course.name }
		p Instructor: #{ lecture.course.instructor }

		h2 Existing Note Pads

		ul
			- each note in notes
				li
					a( href = '/note/#{ note._id }' ) #{ note.name }
					- if (note.public) 
						|  (Public)
					- else
						|  (Private)

		div
			span(class='sub_menu')
				a( href = '/lecture/#{ lecture._id }/notes/new' ) New Note Pad
